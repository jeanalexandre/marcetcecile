<header id="siteHeader" class="fixed top-0 left-0 w-full z-50 transition-all duration-300">
  <div id="headerContainer" class="container-max flex items-center justify-between h-24 transition-all duration-300 cursor-auto">
    <a href="/" class="flex items-center gap-3">
      <div class="w-24 h-24 margin-top-1">
        <img src="/src/assets/images/brand/logo.svg" alt="Marc & Cécile" class="w-full h-full object-contain"/>
      </div>
      <!-- Légende -->
      <div class="hidden sm:flex flex-col justify-center">
        <div class="text-xs text-white/80">Opticien Artisan Lunetier</div>
      </div>
    </a>

    <nav role="navigation" class="hidden md:flex gap-6 text-white font-medium">
      <a href="/" class="transition hover:text-[var(--color-secondary)] hover:scale-105">Accueil</a>
      <a href="/surmesure" class="transition hover:text-[var(--color-secondary)] hover:scale-105">Sur mesure</a>
      <a href="/rendezvous" class="transition hover:text-[var(--color-secondary)] hover:scale-105">Prendre rendez-vous</a>
    </nav>

    <!-- Bouton mobile -->
    <div class="md:hidden relative z-[60]">
      <button
          id="navToggle"
          aria-label="Ouvrir le menu"
          class="p-2 rounded-md border border-white/30 text-white transition-transform duration-300"
      >
        <!-- Icône Burger -->
        <svg id="burgerIcon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"
             viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"
             stroke-linecap="round" stroke-linejoin="round" class="transition-opacity duration-300">
          <path d="M4 6h16M4 12h16M4 18h16"/>
        </svg>

        <!-- Icône Croix -->
        <svg id="closeIcon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"
             viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"
             stroke-linecap="round" stroke-linejoin="round"
             class="absolute inset-0 m-auto opacity-0 transition-opacity duration-300">
          <path d="M6 6l12 12M6 18L18 6"/>
        </svg>
      </button>
    </div>

    <!-- Menu mobile -->
    <div
        id="mobileNav"
        class="md:hidden fixed inset-0 top-0 left-0 w-full h-full bg-[rgba(0,0,0,0.7)] backdrop-blur-sm transition-all duration-500 ease-in-out opacity-0 pointer-events-none z-50"
    >
      <div class="container-max mt-24 flex flex-col items-stretch gap-3 text-white text-lg">
        <a href="/" class="block w-full text-center py-3 hover:bg-white/10 transition">
          Accueil
        </a>
        <a href="/surmesure" class="block w-full text-center py-3 hover:bg-white/10 transition">
          Sur mesure
        </a>
        <a href="/rendezvous" class="block w-full text-center py-3 hover:bg-white/10 transition">
          Prendre rendez-vous
        </a>
        <!-- Icônes Réseaux sociaux Mobile -->
        <div class="flex justify-center gap-6 mt-4">
          <a href="https://www.facebook.com/p/Marc-et-C%C3%A9cile-61575878759493/" aria-label="Facebook" target="_blank" rel="noopener" class="hover:text-[var(--color-secondary)] transition">
            <svg width="26" height="26" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22 12a10 10 0 1 0-11.5 9.89v-7h-2v-2.89h2V10.4c0-2 1.1-3.1 2.8-3.1.8 0 1.7.1 1.7.1v2h-1c-1 0-1.3.6-1.3 1.2v1.4h2.7l-.4 2.89h-2.3v7A10 10 0 0 0 22 12z"/>
            </svg>
          </a>
          <a href="https://www.instagram.com/marc_et_cecile?fbclid=IwY2xjawOW5I1leHRuA2FlbQIxMABicmlkETFhSUdENlk1eDFJc3pLRnBXc3J0YwZhcHBfaWQQMjIyMDM5MTc4ODIwMDg5MgABHuaFXHxhYdq7Ne6A_2accX8BN1rVD89qenMqVw8arh3xDQmWIOu6GSizBJdS_aem_ffp6p_GeDSeC1qB5oLRbuw" aria-label="Instagram" target="_blank" rel="noopener" class="hover:text-[var(--color-secondary)] transition">
            <svg width="26" height="26" viewBox="0 0 24 24" fill="currentColor">
              <path d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5A4.25 4.25 0 0 0 20.5 16.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5zM12 7.1a4.9 4.9 0 1 1 0 9.8 4.9 4.9 0 0 1 0-9.8zm0 1.5a3.4 3.4 0 1 0 0 6.8 3.4 3.4 0 0 0 0-6.8zm5.35-.85a1.05 1.05 0 1 1 2.1 0 1.05 1.05 0 0 1-2.1 0z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <script>
      const btn = document.getElementById('navToggle');
      const menu = document.getElementById('mobileNav');
      const header = document.getElementById('siteHeader');
      const container = document.getElementById('headerContainer');
      const burgerIcon = document.getElementById('burgerIcon');
      const closeIcon = document.getElementById('closeIcon');

      if (btn && menu) {
        btn.addEventListener('click', () => {
          const isOpen = menu.classList.toggle('open');
          menu.classList.toggle('pointer-events-auto', isOpen);

          // Alterne les icônes
          if (isOpen) {
            burgerIcon.classList.add('opacity-0');
            closeIcon.classList.remove('opacity-0');
          } else {
            burgerIcon.classList.remove('opacity-0');
            closeIcon.classList.add('opacity-0');
          }
        });
      }

      // Fermer le menu au clic sur un lien
      document.querySelectorAll('#mobileNav a').forEach(link => {
        link.addEventListener('click', () => {
          menu.classList.remove('open');
          menu.classList.remove('pointer-events-auto');
          burgerIcon.classList.remove('opacity-0');
          closeIcon.classList.add('opacity-0');
        });
      });

      // Animation du header
      if (header && container) {
        header.classList.add('bg-transparent');
        window.addEventListener('scroll', () => {
          if (window.scrollY > 50) {
            header.classList.replace('bg-transparent', 'bg-[var(--color-primary)]');
            container.classList.replace('h-24', 'h-16');
            header.classList.add('shadow-lg');
          } else {
            header.classList.replace('bg-[var(--color-primary)]', 'bg-transparent');
            container.classList.replace('h-16', 'h-24');
            header.classList.remove('shadow-lg');
          }
        });
      }
    </script>
  </div>

  <style>
    /* Transition d'ouverture du menu mobile */
    #mobileNav {
      transform: translateY(-10px);
    }

    #mobileNav.open {
      opacity: 1;
      transform: translateY(0);
    }
  </style>
</header>