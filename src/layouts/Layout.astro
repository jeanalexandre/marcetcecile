---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title = 'Marc & Cécile - Opticien à Cambrai', description = 'Marc & Cécile, opticien artisan lunetier à Cambrai. Showroom coloré, fabrication sur-mesure et examens de vue.' } = Astro.props;
---
<!doctype html>
<html lang="fr">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width,initial-scale=1" />
	<title>{title}</title>
	<meta name="description" content={description} />
	<link rel="stylesheet" href="/src/styles/global.css" />
	<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
	<link rel="shortcut icon" href="/favicon.svg" type="image/png" />
</head>
<body class="antialiased">
<div class="halo-container" aria-hidden="true">
	<div class="halo halo1"></div>
	<div class="halo halo2"></div>
	<div class="halo halo3"></div>
</div>
<Header />
<main class="min-h-[60vh]">
	<slot />
</main>
<Footer />
</body>
</html>
