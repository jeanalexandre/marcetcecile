---
import Layout from '../layouts/Layout.astro';
---
<style>
  .calendly-inline-widget {
    height: 700px;
  }
  @media (max-width: 600px) {
    .calendly-inline-widget {
      height: 100vh;
    }
  }
</style>

<Layout title="Rendez-vous — Marc & Cécile">

  <section class="relative h-[60vh] w-full overflow-hidden">
    <!-- Image + mask -->
    <img
        src="/marcetcecile/images/lunettes.jpg"
        alt="Showroom Marc & Cécile"
        class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-[var(--color-primary)] opacity-70"></div>

    <!-- Contenu -->
    <div class="relative z-10 flex items-center justify-center h-full container-max">
      <div class="max-w-2xl text-center text-white">
        <h1 class="text-5xl font-display mb-4 drop-shadow-lg">Envie d'une nouvelle paire ?</h1>
        <p class="text-lg text-white/90 mb-6">Prenez rendez-vous et venez nous rencontrer</p>
      </div>
    </div>
  </section>

  <!-- Début de widget en ligne Calendly -->
  <div class="calendly-inline-widget" data-url="https://calendly.com/marc-et-cecile/30min?hide_event_type_details=1" style="min-width:320px;"></div>
  <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
  <!-- Fin de widget en ligne Calendly -->
</Layout>
