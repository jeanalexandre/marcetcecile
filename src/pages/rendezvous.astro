---
import Layout from '../layouts/Layout.astro';
---
<style>
  .calendly-inline-widget {
    height: 1000px;
  }

  @media (max-width: 600px) {
    .calendly-inline-widget {
      height: 100vh;
    }
  }
</style>

<Layout title="Prendre rendez-vous chez votre opticien à Cambrai | Marc & Cecile"
        description="Contactez votre opticien à Cambrai Marc & Cecile : prise de RDV, infos magasin, suivi personnalisé.">

  <section class="relative h-[60vh] w-full overflow-hidden">
    <!-- Image + mask -->
    <img
        src="/images/boutique-interieur-3.png"
        alt="Showroom Marc & Cécile"
        class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-[var(--color-primary)] opacity-70"></div>

    <!-- Contenu -->
    <div class="relative z-10 flex items-center justify-center h-full container-max">
      <div class="max-w-2xl text-center text-white">
        <h1 class="text-5xl font-display mb-4 drop-shadow-lg">Envie d'une nouvelle paire ?</h1>
        <p class="text-lg text-white/90 mb-6">Prenez rendez-vous et venez nous rencontrer</p>
      </div>
    </div>
  </section>

  <!-- Calendly inline widget begin -->
  <div class="calendly-inline-widget" data-url="https://calendly.com/marcetcecile"
       style="min-width:320px;height:1000px;"></div>
  <script>
    if (typeof window !== 'undefined') {
      const script = document.createElement('script');
      script.src = 'https://assets.calendly.com/assets/external/widget.js';
      script.async = true;
      document.body.appendChild(script);
    }
  </script>
  <!-- Calendly inline widget end -->
</Layout>
