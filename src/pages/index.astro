              <img src="/images/theo-1.png" alt="Theo" class="carrousel-img absolute inset-0 m-auto object-cover rounded-lg shadow-md transition-opacity duration-700 opacity-100 z-10" style="pointer-events:none;" data-idx="0" loading="lazy" />
              <img src="/images/xit-1.png" alt="Xit" class="carrousel-img absolute inset-0 m-auto object-cover rounded-lg shadow-md transition-opacity duration-700 opacity-0 z-0" style="pointer-events:none;" data-idx="1" loading="lazy" />
              <img src="/images/la-brique-et-la-violette-1.png" alt="La brique et la violette" class="carrousel-img absolute inset-0 m-auto object-cover rounded-lg shadow-md transition-opacity duration-700 opacity-0 z-0" style="pointer-events:none;" data-idx="1" loading="lazy" />
              <img src="/images/c-cile-2.png" alt="C.Cile" class="carrousel-img absolute inset-0 m-auto object-cover rounded-lg shadow-md transition-opacity duration-700 opacity-100 z-10" style="pointer-events:none;" data-idx="0" loading="lazy" />
              <img src="/images/kuboraum-2.png" alt="Kubaurom" class="carrousel-img absolute inset-0 m-auto object-cover rounded-lg shadow-md transition-opacity duration-700 opacity-100 z-10" style="pointer-events:none;" data-idx="0" loading="lazy" />
              <img src="/images/theo-2.png" alt="Theo" class="carrousel-img absolute inset-0 m-auto object-cover rounded-lg shadow-md transition-opacity duration-700 opacity-100 z-10" style="pointer-events:none;" data-idx="0" loading="lazy" />
              <img src="/images/xit-2.png" alt="Xit" class="carrousel-img absolute inset-0 m-auto object-cover rounded-lg shadow-md transition-opacity duration-700 opacity-0 z-0" style="pointer-events:none;" data-idx="1" loading="lazy" />
              <img src="/images/la-brique-et-la-violette-2.png" alt="La brique et la violette" class="carrousel-img absolute inset-0 m-auto object-cover rounded-lg shadow-md transition-opacity duration-700 opacity-0 z-0" style="pointer-events:none;" data-idx="1" loading="lazy" />
              <img src="/images/la-brique-et-la-violette-3.png" alt="La brique et la violette" class="carrousel-img absolute inset-0 m-auto object-cover rounded-lg shadow-md transition-opacity duration-700 opacity-0 z-0" style="pointer-events:none;" data-idx="1" loading="lazy" />
              <script type="module">
                (() => {
                  const images = document.querySelectorAll('#carousel-0 .carrousel-img');
                  let current = 0;
                  function show(idx) {
                    images.forEach((img, i) => {
                      img.classList.toggle('opacity-100', i === idx);
                      img.classList.toggle('z-10', i === idx);
                      img.classList.toggle('opacity-0', i !== idx);
                      img.classList.toggle('z-0', i !== idx);
                    });
                  }
                  function next() {
                    current = (current + 1) % images.length;
                    show(current);
                  }
                  setInterval(next, 3500);
                  show(current);
                })();
